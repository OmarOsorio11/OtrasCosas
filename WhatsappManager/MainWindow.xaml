<Window x:Class="WhatsappManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WhatsApp Manager" Height="600" Width="1000">

    <Grid Background="#F0F2F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Background="#F0F2F5" Margin="15,0">
                <Ellipse Width="40" Height="40" Fill="#DFE5E7"/>
                <TextBlock Text="Mis Chats" VerticalAlignment="Center" Margin="15,0" FontWeight="Bold" FontSize="16"/>
            </StackPanel>

            <ListBox x:Name="lbContactos" Grid.Row="2" BorderThickness="0" 
                     HorizontalContentAlignment="Stretch" SelectionChanged="lbContactos_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Grid.Column="0" Width="45" Height="45" Fill="#00a884"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                <TextBlock Text="{Binding Nombre}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding UltimoMensaje}" Foreground="Gray" FontSize="12" MaxHeight="18" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding Hora}" Foreground="Gray" FontSize="11"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Column="1" x:Name="gridChat" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Background="#F0F2F5" Orientation="Horizontal" Margin="15,0">
                <TextBlock x:Name="lblChatNombre" Text="Nombre" VerticalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>

            <ScrollViewer x:Name="scrollChat" Grid.Row="1" Background="#EFE7DE">
                <StackPanel x:Name="panelMensajes" Margin="20"/>
            </ScrollViewer>

            <Grid Grid.Row="2" Background="#F0F2F5" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtMensaje" Padding="10" BorderThickness="0" Margin="5"/>
                <Button Grid.Column="1" Content="Enviar" Click="BtnSend_Click" Width="80" Margin="5" Background="#00a884" Foreground="White"/>
            </Grid>
        </Grid>
    </Grid>
</Window>