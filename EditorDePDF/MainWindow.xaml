<Window x:Class="EditorDePDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:monaco="clr-namespace:Monaco.Editor.WPF;assembly=Monaco.Editor.WebView"
        Title="iText 10 - PDF Engine" Height="750" Width="1300"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>

            <monaco:MonacoEditor x:Name="CodeEditor" 
                             Grid.Column="0" 
                             Margin="5"/>
            <TextBox x:Name="ErrorConsole" Grid.Row="1" 
                     Background="#252526" Foreground="#F44336" 
                     IsReadOnly="True" BorderThickness="0" 
                     VerticalScrollBarVisibility="Auto" Margin="5"
                     FontFamily="Consolas" Text="Consola lista..."/>
        </Grid>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#333"/>

        <wv2:WebView2 x:Name="PdfViewer" Grid.Column="2" Margin="5"/>
    </Grid>
</Window>